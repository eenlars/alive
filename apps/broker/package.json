{
  "name": "@webalive/broker",
  "version": "0.1.0",
  "description": "Message broker service for Claude streaming - owns state machines, backpressure, and persistence",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "tsc",
    "start": "bun dist/server.js",
    "start:bun": "bun src/server.ts",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@webalive/env": "workspace:*",
    "@webalive/shared": "workspace:*",
    "@webalive/worker-pool": "workspace:*",
    "hono": "^4.7.10",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "24.9.1",
    "typescript": "5.9.3"
  }
}
