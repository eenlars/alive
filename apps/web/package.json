{
  "name": "@webalive/web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo -p 8997",
    "dev:test": "next dev -p 9547",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "start": "next start -p 9000",
    "dev:deploy": "cd ../.. && bun run dev",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "tsc": "tsc --noEmit",
    "type-check": "NODE_OPTIONS='--max-old-space-size=4096' tsc --noEmit",
    "pretest": "bun run scripts/check-test-imports.ts",
    "test": "bun run test:unit",
    "test:unit": "vitest run",
    "test:db": "vitest run -c vitest.db.config.ts",
    "test:sys": "vitest run -c vitest.system.config.ts",
    "test:ci": "bun run test:unit && bun run test:db && bun run test:sys",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:isolated": "bash scripts/test-e2e-debug.sh",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:genuine": "playwright test --config=playwright.genuine.config.ts",
    "test:e2e:genuine:ui": "playwright test --config=playwright.genuine.config.ts --ui",
    "test:e2e:genuine:headed": "playwright test --config=playwright.genuine.config.ts --headed",
    "test:e2e:staging": "ENV_FILE=.env.staging playwright test",
    "test:e2e:staging:ui": "ENV_FILE=.env.staging playwright test --ui",
    "test:e2e:production": "ENV_FILE=.env.production playwright test",
    "test:gates": "playwright test smoke.spec.ts auth.spec.ts protection-verification.spec.ts org-workspace-selection.spec.ts chat.spec.ts deploy.spec.ts && playwright test --config=playwright.genuine.config.ts chat-genuine.spec.ts",
    "check:unregistered-domains": "bun run scripts/check-unregistered-domains.ts",
    "register:unregistered-domains": "bun run scripts/register-unregistered-domains.ts"
  },
  "dependencies": {
    "@alive-brug/alrighty": "workspace:*",
    "@webalive/images": "workspace:*",
    "@webalive/redis": "workspace:*",
    "@webalive/tools": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "@anthropic-ai/sdk": "^0.74.0",
    "@flowglad/nextjs": "^0.18.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@googleapis/gmail": "^16.1.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.81.1",
    "@types/bcrypt": "^6.0.0",
    "@webalive/automation": "workspace:*",
    "@webalive/automation-engine": "workspace:*",
    "@webalive/stream-types": "workspace:*",
    "@webalive/database": "workspace:*",
    "@webalive/env": "workspace:*",
    "@webalive/oauth-core": "workspace:*",
    "@webalive/shared": "workspace:*",
    "@webalive/site-controller": "workspace:*",
    "@webalive/worker-pool": "workspace:*",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^11.11.1",
    "croner": "^10.0.1",
    "groq-sdk": "^0.34.0",
    "jose": "^6.1.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.563.0",
    "next": "^16.0.0",
    "next-themes": "^0.4.6",
    "nextjs-toploader": "^3.9.17",
    "nuqs": "^2.2.3",
    "posthog-js": "^1.339.1",
    "proper-lockfile": "^4.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
