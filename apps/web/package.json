    "@types/react": "19.2.14",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.7",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.10",
    "jsdom": "^26.1.0",
    "ms": "^2.1.3",
    "postcss": "^8.4.47",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "4.0.18"
  }
}
