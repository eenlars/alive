{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.{ts,mjs}"],
      "project": ["scripts/**/*.{ts,mjs}"]
    },
    "apps/web": {
      "entry": ["app/**/*.{ts,tsx}", "lib/test-helpers/**/*.ts"],
      "project": ["**/*.{ts,tsx,mjs}"],
      "playwright": false
    },
    "apps/worker": {
      "project": ["src/**/*.ts"]
    },
    "packages/tools": {
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/images": {
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/shared": {
      "project": ["src/**/*.ts"]
    },
    "packages/env": {
      "project": ["src/**/*.ts"]
    },
    "packages/database": {
      "project": ["src/**/*.ts"]
    },
    "packages/alrighty": {
      "project": ["src/**/*.ts"]
    },
    "packages/automation": {
      "project": ["src/**/*.ts"]
    },
    "packages/automation-engine": {
      "project": ["src/**/*.ts"]
    },
    "packages/oauth-core": {
      "project": ["src/**/*.ts"]
    },
    "packages/redis": {
      "project": ["src/**/*.ts"]
    },
    "packages/site-controller": {
      "project": ["src/**/*.ts"]
    },
    "packages/worker-pool": {
      "entry": ["src/**/*.{ts,mjs}"],
      "project": ["src/**/*.{ts,mjs}"]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.test-d.ts",
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/.turbo/**",
    "**/.builds/**",
    "**/lib/db/**",
    "**/lib/supabase/*.types.ts",
    "templates/site-template/**",
    "**/scripts/**",
    "*.config.{js,ts,mjs}",
    "apps/web/playwright.config.ts",
    "apps/web/playwright.multi-port.config.ts",
    "apps/web/lib/agent-workspace-helpers.mjs",
    "packages/database/src/*.generated.ts",
    "apps/shell-server-go/**",
    "apps/mcp-servers/**",
    "apps/image-processor/**",
    "apps/preview-proxy/**",
    "apps/widget-server/**",
    "apps/web/e2e-tests/**",
    "apps/web/app/dead-components/**",
    "apps/web/components/linear/LinearIssuesStack.tsx",
    "apps/web/components/manager/Terminal.tsx",
    "apps/web/components/ui/primitives/EmailField.tsx",
    "apps/web/components/workspace/OrganizationSwitcher.tsx",
    "apps/web/features/deployment/components/SiteIdeasTextarea.tsx",
    "apps/web/hooks/use-linear-issues.ts",
    "apps/web/lib/hooks/useFetch.ts",
    "apps/web/lib/supabase/server-rls.ts",
    "apps/web/lib/supabase/server.ts",
    "packages/alive-tagger/src/jsx-dev-runtime.ts",
    "packages/site-controller/src/infra/generate-systemd.ts",
    "packages/tools/src/tools/supabase/index.ts"
  ],
  "ignoreDependencies": [
    "tailwindcss",
    "autoprefixer",
    "@anthropic-ai/sdk",
    "@xterm/addon-fit",
    "@xterm/addon-web-links",
    "@xterm/xterm",
    "@types/react"
  ],
  "ignoreBinaries": ["go", "journalctl", "make", "systemctl", "redis-cli", "dist/server.js"],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "duplicates": "error",
    "unlisted": "off",
    "unresolved": "off",
    "exports": "warn",
    "nsExports": "off",
    "nsTypes": "off",
    "enumMembers": "off",
    "classMembers": "off",
    "types": "warn"
  }
}
