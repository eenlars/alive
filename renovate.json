{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 7am on monday"],
  "timezone": "Europe/Amsterdam",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 7am on the first day of the month"]
  },
  "ignorePaths": [
    "templates/**",
    ".builds/**",
    "apps/shell-server-go/client/**"
  ],
  "packageRules": [
    {
      "description": "Group all non-major npm updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "npm minor/patch",
      "automerge": true
    },
    {
      "description": "Major npm updates as separate PRs",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true
    },
    {
      "description": "Group Go dependency updates",
      "matchManagers": ["gomod"],
      "groupName": "go dependencies",
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Pin Claude SDK - review major/minor changes",
      "matchPackageNames": ["@anthropic-ai/sdk"],
      "automerge": false
    },
    {
      "description": "Pin Next.js - review all updates",
      "matchPackageNames": ["next"],
      "automerge": false
    }
  ]
}
