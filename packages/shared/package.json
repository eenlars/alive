{
  "name": "@webalive/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./environments": {
      "import": "./dist/environments.js",
      "types": "./dist/environments.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "generate-json": "node dist/generate-environments-json.js",
    "gen:types": "bun scripts/generate-database-types.ts"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "typescript": "^5.9.3"
  }
}
