{
  "name": "@alive-brug/alrighty",
  "version": "1.0.0",
  "description": "Type-safe API client with Zod validation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "vitest typecheck",
    "type-check": "tsgo --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "ci": "biome ci .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
