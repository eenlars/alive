{
  "name": "@webalive/database",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "import": "./src/schema/index.ts"
    },
    "./drizzle": {
      "types": "./src/drizzle-client.ts",
      "import": "./src/drizzle-client.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsgo --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "gen:types": "bun run scripts/generate-types.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:pull": "drizzle-kit introspect",
    "db:setup": "bun run scripts/setup-database.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.46.2",
    "drizzle-orm": "^0.45.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.3",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.7.2"
  }
}
