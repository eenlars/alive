{
  "name": "@webalive/redis",
  "version": "1.0.0",
  "private": true,
  "description": "Redis infrastructure for monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "setup": "bash scripts/install.sh",
    "start": "bash scripts/start.sh",
    "stop": "bash scripts/stop.sh",
    "status": "docker-compose ps redis",
    "logs": "docker-compose logs -f redis",
    "cli": "docker exec -it redis redis-cli -a dev_password_only",
    "monitor": "docker exec -it redis redis-cli -a dev_password_only MONITOR",
    "health": "bash scripts/health-check.sh",
    "test": "bash scripts/test.sh",
    "clean": "docker-compose down -v"
  },
  "dependencies": {
    "ioredis": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
