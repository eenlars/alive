{
  "name": "@webalive/redis",
  "version": "1.0.0",
  "private": true,
  "description": "Redis infrastructure for monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "setup": "bash scripts/install.sh",
    "start": "bash scripts/start.sh",
    "stop": "bash scripts/stop.sh",
    "status": "systemctl status redis-server",
    "logs": "journalctl -u redis-server -f",
    "cli": "redis-cli",
    "monitor": "redis-cli MONITOR",
    "health": "bash scripts/health-check.sh",
    "test": "bash scripts/test.sh",
    "test:integration": "bash scripts/test.sh"
  },
  "dependencies": {
    "ioredis": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
