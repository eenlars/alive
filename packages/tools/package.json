{
  "name": "@webalive/tools",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./display": {
      "import": "./dist/display.js",
      "types": "./dist/display.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && cp -r src/assets dist/",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "ci": "biome ci .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.25",
    "@webalive/database": "workspace:*",
    "@webalive/shared": "workspace:*",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "@vitest/coverage-v8": "4.0.17",
    "typescript": "^5.9.3",
    "vitest": "4.0.17"
  }
}
