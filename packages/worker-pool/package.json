{
  "name": "@webalive/worker-pool",
  "version": "1.0.0",
  "description": "Persistent worker pool for Claude Agent SDK with Unix socket IPC",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/worker-entry.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "typecheck": "bun run type-check",
    "test": "bun test",
    "check:imports": "node scripts/check-import-order.mjs",
    "lint": "biome lint . && bun run check:imports",
    "format": "biome format --write .",
    "ci": "biome ci . && bun run check:imports",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "@types/node": "^20.0.0",
    "@webalive/shared": "workspace:*",
    "@webalive/tools": "workspace:*",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "worker-pool",
    "claude",
    "ipc",
    "unix-socket",
    "persistent-worker"
  ],
  "author": "WebAlive",
  "license": "MIT"
}
