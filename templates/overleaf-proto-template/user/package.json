{
  "name": "overleaf-proto",
  "private": true,
  "packageManager": "bun@1.2.22",
  "engines": {
    "bun": ">=1.2.22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:editor": "bun --filter @overleaf-proto/editor run dev",
    "dev:renderer": "bun --filter @overleaf-proto/renderer run dev",
    "build": "turbo run build",
    "start:editor": "bun --filter @overleaf-proto/editor run start",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@types/node": "22.13.1",
    "turbo": "2.5.8",
    "typescript": "5.8.2"
  }
}
